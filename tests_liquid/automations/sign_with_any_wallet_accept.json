{
  "version": 1,
  "rules": [
    {
      "regexp": "Register wallet|Policy map|Key",
      "actions": [
        ["button", 2, true],
        ["button", 2, false]
      ]
    },
    {
      "regexp": "Spend from|Review|Amount|Address|Confirm|Fees|The asset|Asset|Reject",
      "actions": [
        ["button", 2, true],
        ["button", 2, false]
      ]
    },
    {
      "regexp": "Approve|Accept|Continue",
      "actions": [
        [ "button", 1, true ],
        [ "button", 2, true ],
        [ "button", 2, false ],
        [ "button", 1, false ]
      ]
    }
  ]
}
